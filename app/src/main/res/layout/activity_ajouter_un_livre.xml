<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/B"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_ajouter_un_livre">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="394dp"
        android:layout_height="53dp"
        android:background="#05BA8B"
        android:fontFamily="sans-serif-black"
        android:text="Cabak David - Limpalaer Cyril"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Retour" />

    <Button
        android:id="@+id/button_Retour"
        android:layout_width="207dp"
        android:layout_height="54dp"
        android:layout_marginBottom="58dp"
        android:fontFamily="sans-serif-black"
        android:onClick="lancer_MainActivity"
        android:text="@string/add"
        android:textSize="24sp"
        app:backgroundTint="#05BB8C"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Prix" />

    <EditText
        android:id="@+id/editText_NbPage"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="327dp"
        android:layout_height="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="78dp"
        android:background="#EDEDED"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:onClick="lancer_MainActivity"
        android:textColor="#050505"
        app:layout_constraintBottom_toBottomOf="@+id/editText_Prix"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/editText_Editeur" />

    <EditText
        android:id="@+id/editText_Editeur"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="327dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="#EDEDED"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:onClick="lancer_MainActivity"
        android:textColor="#050505"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/editText_Prix"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="347dp"
        android:layout_height="27dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="80dp"
        android:background="#EDEDED"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:onClick="lancer_MainActivity"
        android:textColor="#050505"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_Retour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="243dp"
        android:layout_height="64dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="31dp"

        android:fontFamily="sans-serif-black"
        android:text="JavaBook"
        android:textAlignment="center"
        android:textColor="#5BBD8C"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_Titre"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="15dp"
        android:background="#EDEDED"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:onClick="lancer_MainActivity"
        android:textColor="#070707"
        android:textColorHighlight="#151515"
        android:textColorLink="#0C0C0C"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editText_Auteur"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="327dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:background="#EDEDED"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:onClick="lancer_MainActivity"
        android:textColor="#050505"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="156dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:text="@string/add_a_book"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="1dp"
        android:text="@string/title"
        app:layout_constraintBottom_toTopOf="@+id/editText_Titre"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/editText_Titre"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:text="@string/author"
        app:layout_constraintBottom_toTopOf="@+id/editText_Auteur"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/editText_Auteur"
        app:layout_constraintTop_toBottomOf="@+id/editText_Titre" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:text="@string/editor"
        app:layout_constraintBottom_toTopOf="@+id/editText_Editeur"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/editText_Auteur" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="164dp"
        android:layout_height="0dp"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="44dp"
        android:text="@string/number_of_pages"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Editeur" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="91dp"
        android:layout_height="0dp"
        android:text="@string/price"
        app:layout_constraintBottom_toTopOf="@+id/editText_Prix"
        app:layout_constraintStart_toStartOf="@+id/editText_Prix"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

</androidx.constraintlayout.widget.ConstraintLayout>